<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ptda.imiser">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IMiser">
        <activity
            android:name=".activity.DespesasActivity"
            android:label="DespesasActivity"
            android:theme="@style/despesasTheme"/>
        <activity
            android:name=".activity.ReceitasActivity"
            android:label="ReceitasActivity"
            android:theme="@style/receitasTheme"
            />
        <activity
            android:name=".activity.MainAppActivity"
            android:label="@string/title_activity_main_app"
            android:theme="@style/Theme.IMiser.NoActionBar" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/background" />

        <activity android:name=".activity.RegisterFormActivity" />
        <activity android:name=".activity.LoginFormActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>